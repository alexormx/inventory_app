{
  "scripts": {
    "build": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:watch": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets --watch",
    "build:prod": "esbuild app/javascript/application.js --bundle --minify --outdir=app/assets/builds --public-path=/assets",
    "heroku-postbuild": "npm run build:prod"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.13",
    "@popperjs/core": "^2.11.8",
    "echarts": "^5.5.0",
    "esbuild": ">=0.21.0"
  }
}
