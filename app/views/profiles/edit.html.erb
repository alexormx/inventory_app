<% content_for :title do %>Editar Perfil - Pasatiempos a Escala<% end %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i>Editar Perfil</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "needs-validation" do |f| %>

            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h6 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Por favor corrige los siguientes errores:</h6>
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, "Nombre completo", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Ingresa tu nombre completo" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Correo electrónico", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", disabled: true %>
              <div class="form-text">El correo electrónico no se puede cambiar desde aquí.</div>
            </div>

            <div class="mb-3">
              <%= f.label :phone, "Teléfono", class: "form-label" %>
              <%= f.telephone_field :phone, class: "form-control", placeholder: "10 dígitos sin espacios" %>
              <div class="form-text">Ejemplo: 5512345678</div>
            </div>

            <div class="mb-4">
              <%= f.label :address, "Dirección", class: "form-label" %>
              <%= f.text_area :address, class: "form-control", rows: 3, placeholder: "Calle, número, colonia, ciudad, estado, CP" %>
            </div>

            <hr>

            <div class="d-flex justify-content-between">
              <%= link_to profile_path, class: "btn btn-outline-secondary" do %>
                <i class="fas fa-arrow-left me-1"></i> Cancelar
              <% end %>

              <%= f.submit "Guardar Cambios", class: "btn btn-primary" do %>
                <i class="fas fa-save me-1"></i> Guardar Cambios
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Cambiar contraseña -->
      <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
          <h5 class="mb-0"><i class="fas fa-key me-2"></i>Cambiar Contraseña</h5>
        </div>
        <div class="card-body">
          <p class="text-muted mb-3">Para cambiar tu contraseña, utiliza el formulario de Devise.</p>
          <%= link_to edit_user_registration_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-lock me-2"></i>Ir a cambiar contraseña
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
