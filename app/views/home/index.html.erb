<% content_for :title, t('home.index.meta.title') %>
<% content_for :description, t('home.index.meta.description') %>
<div class="container mt-5 text-center">
  <h1 class="display-4 fw-bold mb-4"><%= raw t('home.index.heading_html') %></h1>
  <p class="lead text-muted mb-5"><%= t('home.index.lead') %></p>

  <div class="row row-cols-1 row-cols-md-2 g-4">
    <%# Primera imagen marcada como LCP: fetchpriority=high y preload fuentes principales %>
    <%= render 'home/value_card', lcp: true, image: 'collection_shelf.jpg', alt: t('home.index.cards.collection.alt'), title: t('home.index.cards.collection.title'), text: t('home.index.cards.collection.text') %>
    <%= render 'home/value_card', image: 'father_son_collecting.jpg', alt: t('home.index.cards.legacy.alt'), title: t('home.index.cards.legacy.title'), text: t('home.index.cards.legacy.text') %>
    <%= render 'home/value_card', image: 'collector_friends.jpg', alt: t('home.index.cards.community.alt'), title: t('home.index.cards.community.title'), text: t('home.index.cards.community.text') %>
    <%= render 'home/value_card', image: 'good_practices.jpg', alt: t('home.index.cards.practices.alt'), title: t('home.index.cards.practices.title'), text: t('home.index.cards.practices.text') %>
  </div>

  <hr class="my-5">

  <h2 class="fw-bold text-danger"><%= t('home.index.join_title') %></h2>
  <p class="lead"><%= t('home.index.join_lead') %></p>

  <% if user_signed_in? %>
    <%= link_to t('home.index.explore_cta'), catalog_path, class: "btn btn-danger btn-lg mt-3" %>
  <% else %>
    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 mt-3">
      <%= link_to t('home.index.login_cta'), new_user_session_path, class: "btn btn-outline-danger btn-lg" %>
      <%= link_to t('home.index.register_cta'), new_user_registration_path, class: "btn btn-danger btn-lg" %>
    </div>
  <% end %>
</div>
