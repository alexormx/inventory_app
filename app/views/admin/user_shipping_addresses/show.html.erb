<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h5 mb-0">Dirección</h1>
  <%= link_to 'Volver', admin_user_shipping_addresses_path(@user), class: 'btn btn-outline-secondary btn-sm' %>
</div>

<div class="card">
  <div class="card-body">
    <p><strong>Etiqueta:</strong> <%= @address.label %></p>
    <p><strong>Nombre:</strong> <%= @address.full_name %></p>
    <p><strong>Dirección:</strong><br>
      <%= @address.line1 %><br>
      <%= @address.line2 if @address.line2.present? %>
    </p>
    <p><strong>Ciudad/Estado:</strong> <%= @address.city_state_line %></p>
    <p><strong>CP:</strong> <%= @address.postal_code %></p>
    <p><strong>País:</strong> <%= @address.country %></p>
    <p><strong>Default:</strong> <%= @address.default? ? 'Sí' : 'No' %></p>
  </div>
</div>
