<% @purchase_order.purchase_order_items.each_with_index do |item, index| %>
  <tr class="purchase-item-row item-row">
    <td>
      <input type="hidden" name="order[order_items_attributes][<%= index %>][id]" value="<%= item.id %>">
      <input type="hidden" name="order[order_items_attributes][<%= index %>][product_id]" value="<%= item.product_id %>" class="item-product-id">
      <span class="item-product-name text-muted small"><%= item.product.product_name %></span>
    </td>

    <td>
      <input type="number" name="order[order_items_attributes][<%= index %>][quantity]" value="<%= item.quantity %>" min="1" class="form-control form-control-sm item-qty">
    </td>

    <td>
      <input type="number" name="order[order_items_attributes][<%= index %>][unit_cost]" value="<%= item.unit_cost %>" step="0.01" class="form-control form-control-sm item-unit-cost">
    </td>

    <td>
      <input type="text" value="<%= item.total_line_volume %>" readonly class="form-control-plaintext form-control-sm item-volume" data-unit-volume="<%= item.total_line_volume.to_f / item.quantity %>">
    </td>

    <td>
      <input type="text" value="<%= item.total_line_weight %>" readonly class="form-control-plaintext form-control-sm item-weight" data-unit-weight="<%= item.total_line_weight.to_f / item.quantity %>">
    </td>

    <td>
      <input type="number" name="order[order_items_attributes][<%= index %>][unit_additional_cost]" value="<%= item.unit_additional_cost %>" readonly class="form-control-plaintext form-control-sm item-unit-additional-cost">
    </td>

    <td>
      <input type="text" name="order[order_items_attributes][<%= index %>][unit_compose_cost]" value="<%= item.unit_compose_cost %>" readonly class="form-control-plaintext form-control-sm item-unit-compose-cost">
    </td>

    <td>
      <input type="text" name="order[order_items_attributes][<%= index %>][unit_compose_cost_in_mxn]" value="<%= item.unit_compose_cost_in_mxn %>" readonly class="form-control-plaintext form-control-sm item-unit-compose-cost-mxn">
    </td>

    <td>
      <input type="text" name="order[order_items_attributes][<%= index %>][total_line_cost]" value="<%= item.total_line_cost %>" readonly class="form-control-plaintext form-control-sm item-total-cost">
    </td>

    <td>
      <input type="text" name="order[order_items_attributes][<%= index %>][total_line_cost_in_mxn]" value="<%= item.total_line_cost_in_mxn %>" readonly class="form-control-plaintext form-control-sm item-line-total-cost-mxn">
    </td>

    <td>
      <input type="hidden" name="order[order_items_attributes][<%= index %>][_destroy]" value="false" class="item-destroy-flag">
      <button type="button" class="btn btn-sm btn-outline-danger remove-item"><i class="fa fa-trash"></i></button>
    </td>
  </tr>
<% end %>
<% if @purchase_order.purchase_order_items.empty? %>
  <tr id="purchase-without-items" class="order-without-items">
    <td colspan="11" class="text-center text-muted">No items added yet.</td>
  </tr>
<% end %>