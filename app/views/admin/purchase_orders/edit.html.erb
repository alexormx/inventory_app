<h1 class="h4 mb-4">Edit Purchase Order</h1>
<% if @purchase_order.errors.any? %>
  <div class="alert alert-danger">
    <h5>There were errors saving this purchase order:</h5>
    <ul>
      <% @purchase_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: [:admin, @purchase_order], local: true, class: "row g-3" do |f| %>
  <div class="card mb-4">
    <div class="card-body row">
      <%= render "admin/purchase_orders/order_info_fields", f: f %>
    </div>
  </div>

  <!-- Add product searcher & item list here -->
  <%= render "admin/purchase_orders/item_search_and_table", f: f %>

  <div class="col-12">
    <%= f.submit "Save Purchase Order", class: "btn btn-success" %>
    <%= link_to "Cancel", admin_purchase_orders_path, class: "btn btn-secondary" %>
  </div>
<% end %>