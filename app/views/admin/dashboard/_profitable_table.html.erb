<% rel ||= @rel %>
<% rows ||= @rows %>
<% period ||= @period %>
<div class="table-responsive p-2">
  <table class="table table-sm align-middle">
    <thead class="table-light sticky-top">
      <tr>
        <th scope="col">Rank</th>
        <th scope="col">Producto</th>
        <th scope="col" class="text-end">Ingresos</th>
        <th scope="col" class="text-end">COGS</th>
        <th scope="col" class="text-end">Utilidad</th>
      </tr>
    </thead>
    <tbody>
      <% if rows.present? %>
        <% rows.each_with_index do |r, idx| %>
          <tr>
            <td class="text-muted">#<%= idx + 1 %></td>
            <td>
              <div class="small fw-semibold"><i class="fa-solid fa-box-open text-muted me-1"></i> <%= r[:name] %></div>
              <% if r[:brand].present? || r[:category].present? %>
                <div class="text-muted" style="font-size: .75rem;">(<%= [r[:brand], r[:category]].compact.join(' - ') %>)</div>
              <% end %>
            </td>
            <td class="text-end"><%= number_to_currency(r[:revenue]) %></td>
            <td class="text-end"><%= number_to_currency(r[:cogs]) %></td>
            <td class="text-end <%= 'text-danger' if r[:profit].to_d < 0 %>"><%= number_to_currency(r[:profit]) %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5" class="text-center text-muted py-3">Sin datos</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
