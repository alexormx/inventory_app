<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h5 mb-0">Users</h1>
  <div class="small text-muted">
    Customers: <strong><%= @counts[:customers] %></strong>
    • Suppliers: <strong><%= @counts[:suppliers] %></strong>
    • Admins: <strong><%= @counts[:admins] %></strong>
  </div>
  <%= link_to "New User", new_admin_user_path, class: "btn btn-primary btn-sm" %>
</div>

<turbo-frame id="users_frame">
  <%= render partial: 'admin/users/pipeline', locals: { users: @users, current_tab: 'customers', counts: @counts, purchase_stats: @purchase_stats, sales_stats: @sales_stats, last_visits: @last_visits } %>
  
</turbo-frame>