<%# Admin::Users form %>
<%= form_with model: [:admin, @user], local: true do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-end mb-2">
        <% if @user&.persisted? %>
          <%= link_to 'Manage Addresses', admin_user_shipping_addresses_path(@user), class: 'btn btn-sm btn-outline-primary' %>
        <% end %>
      </div>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :phone, class: 'form-label' %>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :role, class: 'form-label' %>
          <%= f.select :role, [['Customer','customer'],['Supplier','supplier'],['Admin','admin']], {}, class: 'form-select' %>
        </div>
        <div class="col-md-6">
          <%= f.label :discount_rate, 'Discount %', class: 'form-label' %>
          <%= f.number_field :discount_rate, class: 'form-control', step: 0.01, min: 0, max: 100 %>
        </div>
        <div class="col-md-6 form-check mt-4">
          <%= f.check_box :created_offline, class: 'form-check-input', id: 'user_created_offline' %>
          <%= f.label :created_offline, 'Offline customer', class: 'form-check-label' %>
        </div>
        <div class="col-md-6">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control', autocomplete: 'new-password' %>
        </div>
        <div class="col-md-6">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'new-password' %>
        </div>

        <div class="col-md-6 form-check mt-4">
          <%= f.check_box :credit_enabled, class: 'form-check-input', id: 'user_credit_enabled' %>
          <%= f.label :credit_enabled, 'Crédito habilitado', class: 'form-check-label' %>
        </div>
        <div class="col-md-6">
          <%= f.label :default_credit_terms, 'Términos de crédito por defecto', class: 'form-label' %>
          <%= f.select :default_credit_terms, [["None","none"],["Net 15","net15"],["Net 30","net30"],["Net 45","net45"]], {}, class: 'form-select' %>
        </div>
        <div class="col-md-6">
          <%= f.label :credit_limit, 'Límite de crédito (MXN)', class: 'form-label' %>
          <%= f.number_field :credit_limit, class: 'form-control', step: 0.01, min: 0 %>
        </div>
      </div>
    </div>
    <div class="card-footer d-flex justify-content-end gap-2">
      <%= link_to 'Cancel', admin_users_path, class: 'btn btn-outline-secondary' %>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
