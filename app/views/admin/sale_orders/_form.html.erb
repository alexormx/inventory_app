# app/views/admin/sale_orders/_form.html.erb
<%= form_with model: [:admin, @sale_order], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :user_id, "Customer" %>
    <div data-controller="user-suggest" data-user-suggest-role-value="customer" class="position-relative">
      <input type="text" class="form-control" data-user-suggest-target="input" placeholder="Empieza a escribir el cliente" data-action="input->user-suggest#input keydown->user-suggest#keydown">
      <%= f.hidden_field :user_id, data: { 'user-suggest-target': 'hidden' } %>
      <div class="form-text" data-user-suggest-target="hint"></div>
      <div data-user-suggest-target="results" style="z-index: 1050;"></div>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :order_date %>
    <%= f.date_field :order_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :status %>
  <%= f.select :status, SaleOrder.validators_on(:status).first.options[:in].map { |s| [s, s] }, {}, class: "form-select" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
