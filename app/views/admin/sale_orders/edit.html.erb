<h1 class="h4 mb-4">
  <i class="fa fa-edit"></i> Editar Orden de Venta
</h1>

<% if @sale_order.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h5 class="alert-heading">
      <i class="fa fa-exclamation-triangle"></i> Errores al guardar
    </h5>
    <ul class="mb-0">
      <% @sale_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show flash-message" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show flash-message" role="alert">
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="order-context" data-context="sale-order">
  <%= form_with model: [:admin, @sale_order], local: true, class: "row g-3" do |f| %>
    <div class="col-lg-9">
      <!-- Sección 1: Información Básica -->
      <div class="card mb-3">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="fa fa-info-circle"></i> Información Básica
          </h5>
        </div>
        <div class="card-body row g-3">
          <%= render "customer_and_dates_fields", f: f %>
        </div>
      </div>

      <!-- Sección 2: Productos -->
      <div class="card mb-3">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">
            <i class="fa fa-boxes"></i> Productos de la Orden
          </h5>
        </div>
        <div class="card-body">
          <%= render "admin/shared/item_search_and_table", f: f, context: "sale" %>
        </div>
      </div>

      <!-- Sección 3: Cálculos y Totales -->
      <div class="card mb-3">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">
            <i class="fa fa-dollar-sign"></i> Impuestos, Descuentos y Totales
          </h5>
        </div>
        <div class="card-body row g-3">
          <%= render "costs_and_totals_fields", f: f, sale_order: @sale_order %>
        </div>
      </div>
    </div>

    <!-- Panel lateral: Resumen -->
    <div class="col-lg-3">
      <%= render "summary_sidebar", f: f, sale_order: @sale_order %>
    </div>
  <% end %>
</div>