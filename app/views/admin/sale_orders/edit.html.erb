<h1 class="h4 mb-4">Edit Sale Order</h1>

<% if @sale_order.errors.any? %>
  <div class="alert alert-danger">
    <h5>There were errors saving this sale order:</h5>
    <ul>
      <% @sale_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="order-context" data-context="sale-order">
  <%= form_with model: [:admin, @sale_order], local: true, class: "row g-3" do |f| %>
    <div class="card mb-4">
      <div class="card-body row">
        <%= render "admin/sale_orders/order_info_fields", f: f %>
      </div>
    </div>

    <%= render "admin/shared/item_search_and_table", f: f, context: "sale" %>

    <div class="col-12">
      <%= f.submit "Save Sale Order", class: "btn btn-success" %>
      <%= link_to "Cancel", admin_sale_orders_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>