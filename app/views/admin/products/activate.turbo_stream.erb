<%= turbo_stream.remove dom_id(@product, :card) %>
<%# Insertar en lista Active si estamos en otra pestaÃ±a o en all %>
<%= turbo_stream.append "products_list_active" do %>
	<div class="col-md-6 col-lg-4">
		<%= render partial: 'admin/products/product_card', locals: { product: @product, current_tab: 'active' } %>
	</div>
<% end %>
<%= turbo_stream.replace "products_counts_global" do %>
	<%= render partial: "admin/shared/status_counters", locals: {
		wrapper_id: "products_counts_global",
		counts: @counts_global,
		items: [[:draft,"Drafts","bg-secondary"],[:active,"Active","bg-success"],[:inactive,"Inactive","bg-danger"]],
		title: "Resumen",
		cta_label: "New Product",
		cta_path: new_admin_product_path
	} %>
<% end %>
<%= turbo_stream.replace "products_counts_filtered" do %>
	<%= render partial: "admin/shared/status_counters", locals: {
		wrapper_id: "products_counts_filtered",
		counts: @counts,
		items: [[:draft,"Drafts","bg-secondary"],[:active,"Active","bg-success"],[:inactive,"Inactive","bg-danger"]],
		hide_zero: true,
		extra_class: "mb-2",
		title: "Resultados"
	} %>
<% end %>