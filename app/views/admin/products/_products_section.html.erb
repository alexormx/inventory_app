<div id="products_section">
  <div id="products_list_<%= (local_assigns[:current_tab] || params[:status] || 'all') %>" class="row g-3">
  <% products.each do |product| %>
    <div class="col-md-6 col-lg-4">
  <%= render partial: 'product_card', locals: { product: product, current_tab: (local_assigns[:current_tab] || 'active') } %>
    </div>
  <% end %>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate products, params: request.query_parameters %>
  </div>
</div>
