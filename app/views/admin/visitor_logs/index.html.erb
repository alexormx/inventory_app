  <tbody>
    <% @visitor_logs.each do |log| %>
      <tr>
        <td><%= log.path %></td>
        <td><%= log.visit_count %></td>
        <td><%= log.last_visited_at&.strftime("%d-%m-%Y %H:%M") %></td>
        <td><%= log.ip_address %></td>
        <td><%= log.user&.email || "Visitante" %></td>
        <td class="text-truncate" style="max-width: 250px;"><%= log.user_agent %></td>
        <td>
          <%= image_tag "https://flagcdn.com/24x18/#{log.country.downcase}.png" if log.country %>
          <%= [log.city, log.region, log.country].compact.join(", ") %>
        </td>
      </tr>
    <% end %>
  </tbody>
