<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Adjustment #<%= @inventory_adjustment.id %></h3>
    <div class="d-flex gap-2">
      <% if @inventory_adjustment.status_draft? %>
        <%= button_to 'Apply', apply_admin_inventory_adjustment_path(@inventory_adjustment), method: :post, class: 'btn btn-success' %>
        <%= link_to 'Edit', edit_admin_inventory_adjustment_path(@inventory_adjustment), class: 'btn btn-outline-secondary' %>
      <% else %>
        <%= button_to 'Reverse', reverse_admin_inventory_adjustment_path(@inventory_adjustment), method: :post, class: 'btn btn-warning' %>
      <% end %>
      <%= link_to 'Back', admin_inventory_adjustments_path, class: 'btn btn-outline-dark' %>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-md-3"><strong>Status:</strong> <%= @inventory_adjustment.status %></div>
    <div class="col-md-3"><strong>Type:</strong> <%= @inventory_adjustment.adjustment_type %></div>
    <div class="col-md-3"><strong>Reference:</strong> <%= @inventory_adjustment.reference %></div>
  </div>

  <hr>
  <h5>Lines</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product</th>
        <th>Direction</th>
        <th>Qty</th>
  <th>Reason / Target</th>
        <th>Unit cost</th>
      </tr>
    </thead>
    <tbody>
      <% @inventory_adjustment.inventory_adjustment_lines.includes(:product).each do |l| %>
        <tr>
          <td><%= l.product&.product_name %></td>
          <td><%= l.direction %></td>
          <td><%= l.quantity %></td>
          <td>
            <% if l.decrease? %>
              <span class="badge bg-danger"><%= l.reason %></span>
            <% else %>
              <span class="badge bg-success">increase</span>
            <% end %>
          </td>
          <td><%= number_to_currency(l.unit_cost || 0) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
