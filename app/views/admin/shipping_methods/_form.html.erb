<%= form_with model: [:admin, shipping_method], local: true, class: "card" do |f| %>
  <div class="card-body">
    <% if shipping_method.errors.any? %>
      <div class="alert alert-danger">
        <h6 class="alert-heading"><i class="fa fa-exclamation-triangle me-2"></i>Errores:</h6>
        <ul class="mb-0">
          <% shipping_method.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :name, "Nombre *", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Ej: Envío estándar", required: true %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :code, "Código *", class: "form-label" %>
        <%= f.text_field :code, class: "form-control", placeholder: "Ej: envio_estandar", required: true %>
        <div class="form-text">Se usará internamente. Se normalizará automáticamente.</div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 mb-3">
        <%= f.label :base_cost, "Costo Base ($)", class: "form-label" %>
        <%= f.number_field :base_cost, class: "form-control", step: 0.01, min: 0, placeholder: "0.00" %>
      </div>
      <div class="col-md-4 mb-3">
        <%= f.label :position, "Orden", class: "form-label" %>
        <%= f.number_field :position, class: "form-control", min: 0 %>
        <div class="form-text">Menor = aparece primero</div>
      </div>
      <div class="col-md-4 mb-3">
        <%= f.label :active, "Estado", class: "form-label" %>
        <%= f.select :active, [["Activo", true], ["Inactivo", false]], {}, class: "form-select" %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Descripción", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Descripción para mostrar al cliente..." %>
    </div>
  </div>

  <div class="card-footer d-flex justify-content-between">
    <%= link_to admin_shipping_methods_path, class: "btn btn-outline-secondary" do %>
      <i class="fa fa-arrow-left me-1"></i> Cancelar
    <% end %>
    <%= f.submit shipping_method.persisted? ? "Guardar Cambios" : "Crear Método", class: "btn btn-primary" %>
  </div>
<% end %>
