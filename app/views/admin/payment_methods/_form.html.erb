<%= form_with model: [:admin, payment_method], local: true, class: "card" do |f| %>
  <div class="card-body">
    <% if payment_method.errors.any? %>
      <div class="alert alert-danger">
        <h6 class="alert-heading"><i class="fa fa-exclamation-triangle me-2"></i>Errores:</h6>
        <ul class="mb-0">
          <% payment_method.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :name, "Nombre *", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Ej: Transferencia Bancaria (SPEI)", required: true %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :code, "Código *", class: "form-label" %>
        <%= f.text_field :code, class: "form-control", placeholder: "Ej: transferencia_bancaria", required: true %>
        <div class="form-text">Se usará internamente. Se normalizará automáticamente.</div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :position, "Orden", class: "form-label" %>
        <%= f.number_field :position, class: "form-control", min: 0 %>
        <div class="form-text">Menor = aparece primero</div>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :active, "Estado", class: "form-label" %>
        <%= f.select :active, [["Activo", true], ["Inactivo", false]], {}, class: "form-select" %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Descripción", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 2, placeholder: "Descripción corta del método de pago..." %>
    </div>

    <!-- Datos de Cuenta Bancaria / OXXO -->
    <div class="card bg-light mb-3">
      <div class="card-header py-2">
        <i class="fa fa-university me-1"></i> Datos de Cuenta (SPEI / OXXO / Tarjeta)
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :bank_name, "Banco", class: "form-label" %>
            <%= f.text_field :bank_name, class: "form-control", placeholder: "Ej: BBVA, Banorte, Santander..." %>
          </div>
          <div class="col-md-6 mb-3">
            <%= f.label :account_holder, "Titular / Beneficiario", class: "form-label" %>
            <%= f.text_field :account_holder, class: "form-control", placeholder: "Nombre del titular de la cuenta" %>
          </div>
        </div>
        <div class="mb-0">
          <%= f.label :account_number, "CLABE / Número de Tarjeta / Cuenta", class: "form-label" %>
          <%= f.text_field :account_number, class: "form-control", placeholder: "Ej: 012345678901234567 (CLABE) o 4152 3138 0000 0000 (Tarjeta)" %>
          <div class="form-text">Para SPEI usa la CLABE (18 dígitos). Para depósitos OXXO usa el número de tarjeta.</div>
        </div>
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :instructions, "Instrucciones Adicionales", class: "form-label" %>
      <%= f.text_area :instructions, class: "form-control", rows: 3, placeholder: "Instrucciones adicionales para el cliente (ej: enviar comprobante por WhatsApp)..." %>
    </div>
  </div>

  <div class="card-footer d-flex justify-content-between">
    <%= link_to admin_payment_methods_path, class: "btn btn-outline-secondary" do %>
      <i class="fa fa-arrow-left me-1"></i> Cancelar
    <% end %>
    <%= f.submit payment_method.persisted? ? "Guardar Cambios" : "Crear Método", class: "btn btn-primary" %>
  </div>
<% end %>
