<div id="sidebar" class="bg-dark text-white p-3 vh-100 sidebar-expanded transition">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">
      <i class="fa-solid fa-gear me-2 sidebar-label"></i>
      <span class="sidebar-label">Admin Panel</span>
    </h4>
    <button id="sidebarToggle" class="btn btn-sm btn-outline-light d-md-inline d-none">
      <i class="fa-solid fa-bars"></i>
    </button>
  </div>

  <ul class="nav flex-column">
    <!-- 📊 Dashboard -->
    <li class="nav-item mb-1">
      <%= link_to admin_dashboard_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-chart-line me-2"></i>
        <span class="sidebar-label">Dashboard</span>
      <% end %>
    </li>

    <hr class="text-secondary my-2">

    <!-- 🧑 Users -->
    <li class="text-uppercase small text-secondary ps-2 mb-1 sidebar-label">Users</li>
    <li class="nav-item">
      <%= link_to admin_customers_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-user me-2"></i>
        <span class="sidebar-label">Customers</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to admin_suppliers_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-truck me-2"></i>
        <span class="sidebar-label">Suppliers</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to admin_admins_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-user-shield me-2"></i>
        <span class="sidebar-label">Admins</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to admin_users_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-user-tag me-2"></i>
        <span class="sidebar-label">Users</span>
      <% end %>
    </li>

    <hr class="text-secondary my-2">

    <!-- 📦 Inventory -->
    <li class="text-uppercase small text-secondary ps-2 mb-1 sidebar-label">Inventory</li>
    <li class="nav-item">
      <%= link_to admin_products_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-boxes-stacked me-2"></i>
        <span class="sidebar-label">Products</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to admin_purchase_orders_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-file-invoice-dollar me-2"></i>
        <span class="sidebar-label">Purchase Orders</span>
      <% end %>
    </li>

    <hr class="text-secondary my-2">

    <!-- ⚙️ System -->
    <li class="text-uppercase small text-secondary ps-2 mb-1 sidebar-label">System</li>
    <li class="nav-item">
      <%= link_to admin_reports_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-chart-pie me-2"></i>
        <span class="sidebar-label">Reports</span>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to admin_settings_path, class: "nav-link text-white d-flex align-items-center" do %>
        <i class="fa-solid fa-sliders me-2"></i>
        <span class="sidebar-label">Settings</span>
      <% end %>
    </li>
  </ul>
</div>