<h2 class="mb-4">ðŸ“¦ Inventory Overview</h2>

<% @products_with_inventory.each do |product| %>
  <div class="card mb-3 shadow-sm main-inventory-card">
    <div class="card-header d-flex justify-content-between align-items-center bg-light">
      <div class="d-flex align-items-center">
        <% if product.product_images.attached? %>
          <%= image_tag product.product_images.first.variant(resize_to_fill: [40, 40]), class: "rounded me-2" %>
        <% else %>
          <%= image_tag "placeholder.png", size: "40x40", class: "rounded me-2" %>
        <% end %>
        <strong><%= product.product_name %></strong>
        <span class="text-muted ms-2 small">SKU: <%= product.product_sku %></span>
      </div>
    </div>

    <turbo-frame id="inventory-summary-<%= product.id %>">
      <div class="card-body py-2">
        <div class="row text-center small">
          <% {
            "Available" => product.inventories.available.count,
            "Reserved" => product.inventories.reserved.count,
            "In Transit" => product.inventories.in_transit.count,
            "Sold" => product.inventories.sold.count,
            "Damaged" => product.inventories.damaged.count,
            "Lost" => product.inventories.lost.count,
            "Scrap" => product.inventories.scrap.count,
            "Total" => product.inventories.count
          }.each do |label, count| %>
            <div class="col-6 col-md-3 col-lg-2 mb-2">
              <strong><%= label %>:</strong> <%= count %>
            </div>
          <% end %>
        </div>
      </div>
    </turbo-frame>
    <turbo-frame id="inventory-items-frame-<%= product.id %>" class="mt-2">
      <% if product.inventories.count > 0 %>
        <%= link_to "ðŸ‘ View Items", items_admin_inventory_path(product), data: { turbo_frame: "inventory-items-frame-#{product.id}" }, class: "btn btn-sm btn-outline-primary" %>
      <% end %>
    </turbo-frame>
  </div>
<% end %>