<turbo-frame id="inventory-items-frame-<%= product.id %>" class="mt-3">
  <div class="mx-3"> <!-- Adds horizontal margin -->
    <table class="table table-sm table-bordered table-striped align-middle">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Status</th>
          <th>Purchase Order</th>
          <th>Line</th>
          <th>Sale Order</th>
          <th>Purchase Cost</th>
          <th>Sale Price</th>
          <th>Updated</th>
        </tr>
      </thead>
      <tbody>
        <% items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <% if item.status.present? %>
                <span class="badge bg-<%= inventory_status_color(item.status) %>">
                  <%= item.status.humanize %>
                </span>
              <% else %>
                <span class="badge bg-secondary text-light">Unknown</span>
              <% end %>
            </td>
            <td><%= item.purchase_order_id || "—" %></td>
            <td><%= item.purchase_order_item_id || "—" %></td>
            <td><%= item.sale_order_id || "—" %></td>
            <td><%= number_to_currency(item.purchase_cost) %></td>
            <td><%= number_to_currency(item.sold_price) %></td>
            <td><%= item.status_changed_at&.strftime("%F") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</turbo-frame>
