<turbo-frame id="<%= (local_assigns[:frame_id].presence || "inventory-items-frame-#{product.id}") %>" class="mt-3">
  <div class="mx-3 inventory-items"> <!-- Adds horizontal margin -->
    <% selected_status = params[:status].presence || 'all' %>
    <div class="d-flex justify-content-between small text-muted mb-2">
      <div>
        <% if selected_status != 'all' %>
          Mostrando piezas con estado: <strong><%= inventory_status_label(selected_status) %></strong>
        <% else %>
          Mostrando todas las piezas
        <% end %>
      </div>
      <div>
        Renderizadas: <strong><%= items.size %></strong>
        <% if product.respond_to?(:inventories) %>
          · Esperadas (status actual):
          <strong>
            <% if selected_status != 'all' %>
              <%= product.inventories.where(status: selected_status).count %>
            <% else %>
              <%= product.inventories.count %>
            <% end %>
          </strong>
        <% end %>
      </div>
    </div>
    <table class="table table-sm  table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Status</th>
          <th>Purchase Order</th>
          <th>Line</th>
          <th>Sale Order</th>
          <th>Purchase Cost</th>
          <th>Sale Price</th>
          <th>Updated</th>
        </tr>
      </thead>
      <tbody>
        <% items.each do |item| %>
          <tr id="inventory-item-<%= item.id %>">
            <td><%= item.id %></td>  
            <td>
              <turbo-frame id="inventory_status_<%= item.id %>">
                <%= render partial: "admin/inventory/status_badge", locals: { item: item } %>
              </turbo-frame>
            </td>
            <td><%= item.purchase_order_id || "—" %></td>
            <td><%= item.purchase_order_item_id || "—" %></td>
            <td><%= item.sale_order_id || "—" %></td>
            <td><%= number_to_currency(item.purchase_cost) %></td>
            <td><%= number_to_currency(item.sold_price) %></td>
            <td><%= item.status_changed_at&.strftime("%F") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <!-- Sin paginación: se renderizan todas las piezas -->
  </div>
</turbo-frame>
