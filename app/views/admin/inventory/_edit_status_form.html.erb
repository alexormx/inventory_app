<turbo-frame id="inventory_status_<%= item.id %>">
  <%= form_with url: update_status_admin_inventory_path(item), method: :patch, local: false do |f| %>
    <div class="d-flex gap-2 align-items-center">
      <%= f.select :status,
        Inventory.statuses.except("sold").keys.map { |s| [s.humanize, s] },
        { selected: item.status },
        class: "form-select form-select-sm d-inline w-auto" %>

      <%= f.submit class: "btn btn-sm btn-success", title: "Save" do %>
        <i class="fas fa-check"></i>
      <% end %>

      <%= link_to cancel_edit_status_admin_inventory_path(item), 
                  data: { turbo_frame: "inventory_status_#{item.id}" },
                  class: "btn btn-sm btn-secondary", 
                  title: "Cancel" do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
  <% end %>
</turbo-frame>
