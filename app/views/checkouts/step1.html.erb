<%= render 'checkouts/progress_bar', current_step: 1 %>

<div class="row">
  <div class="col-lg-8">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="mb-0">Confirma tus productos</h4>
      <%= link_to cart_path, class: 'btn btn-sm btn-outline-secondary' do %>
        <i class="fa fa-pencil me-1"></i> Editar carrito
      <% end %>
    </div>

    <% if @cart.empty? %>
      <div class="alert alert-info">
        <i class="fa fa-info-circle me-2"></i>
        Tu carrito está vacío. <%= link_to 'Ver catálogo', products_path %>.
      </div>
    <% else %>
      <%= form_with url: checkout_step1_path, method: :post, local: true do %>
        <div class="card mb-4">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th class="ps-3">Producto</th>
                    <th class="text-center" style="width: 100px;">Cantidad</th>
                    <th class="text-end" style="width: 120px;">Precio</th>
                    <th class="text-end pe-3" style="width: 120px;">Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cart.items.each do |item| %>
                    <% product = item[:product] %>
                    <% quantity = item[:quantity] %>
                    <% item_price = item[:price] %>
                    <% collectible = item[:collectible] %>
                    <tr>
                      <td class="ps-3">
                        <div class="d-flex align-items-center gap-3">
                          <% if product.product_images.attached? %>
                            <%= image_tag product.product_images.first.variant(resize_to_limit: [60, 60]), class: "rounded border", style: "width: 60px; height: 60px; object-fit: cover;" %>
                          <% else %>
                            <div class="bg-light rounded border d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                              <i class="fa fa-image text-muted"></i>
                            </div>
                          <% end %>
                          <div>
                            <div class="fw-medium">
                              <%= product.product_name %>
                              <% if collectible %>
                                <span class="badge bg-warning-subtle text-warning" title="Pieza coleccionable única">
                                  <i class="fas fa-gem me-1"></i><%= item[:label] %>
                                </span>
                              <% end %>
                            </div>
                            <small class="text-muted">SKU: <%= product.product_sku %></small>
                            <% if product.brand.present? %>
                              <br><small class="text-muted"><%= product.brand %></small>
                            <% end %>
                          </div>
                        </div>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-secondary fs-6"><%= quantity %></span>
                      </td>
                      <td class="text-end"><%= number_to_currency(item_price) %></td>
                      <td class="text-end pe-3 fw-medium"><%= number_to_currency(item_price * quantity) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-header bg-light">
            <h6 class="mb-0"><i class="fa fa-comment me-2"></i>Notas adicionales (opcional)</h6>
          </div>
          <div class="card-body">
            <%= text_area_tag :notes, nil, rows: 2, class: "form-control", placeholder: "Instrucciones especiales, comentarios sobre tu pedido..." %>
          </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <%= link_to cart_path, class: 'btn btn-outline-secondary' do %>
            <i class="fa fa-arrow-left me-1"></i> Volver al carrito
          <% end %>
          <%= submit_tag "Continuar con envío →", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="col-lg-4 mt-4 mt-lg-0">
    <%= render 'checkouts/cart_summary', cart: @cart %>
  </div>
</div>
