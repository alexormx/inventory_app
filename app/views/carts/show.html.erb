<h1 class="mb-3">ðŸ›’ Tu Carrito</h1>

<% if @cart.empty? %>
  <div class="card p-4 text-center bg-light-subtle">
    <p class="text-muted mb-3">Tu carrito estÃ¡ vacÃ­o.</p>
    <%= link_to 'Explorar productos', catalog_path, class: 'btn btn-outline-primary' %>
  </div>
<% else %>
  <% items = @cart.items %>
  <div class="row g-4">
    <div class="col-lg-8">
      <div class="table-responsive">
        <table class="table align-middle" aria-describedby="cart-summary-heading">
          <caption class="visually-hidden">Listado de productos en el carrito</caption>
          <thead>
            <tr>
              <th scope="col">Producto</th>
              <th scope="col" class="text-center">Cantidad</th>
              <th scope="col" class="text-end">Precio</th>
              <th scope="col" class="text-end">Total</th>
              <th scope="col" class="text-end"></th>
            </tr>
          </thead>
          <tbody id="cart-items">
            <% items.each do |product, quantity| %>
              <%= render 'carts/cart_item', product: product, quantity: quantity, cart: @cart %>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="3" class="text-end"><strong>Total:</strong></td>
              <td id="cart-total" class="text-end"><%= number_to_currency(@cart.total) %></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card shadow-sm sticky-top" style="top:90px;">
        <div class="card-body">
          <h5 id="cart-summary-heading" class="card-title mb-3">Resumen</h5>
          <ul class="list-unstyled small mb-3">
            <li class="d-flex justify-content-between"><span>Productos (<%= @cart.item_count %>)</span><strong><%= number_to_currency(@cart.total) %></strong></li>
            <!-- Placeholder para futuro: envÃ­o, impuestos -->
          </ul>
          <div class="d-grid gap-2">
            <%= link_to 'Finalizar compra', checkout_step1_path, class: 'btn btn-primary btn-lg' %>
            <%= link_to 'Seguir comprando', catalog_path, class: 'btn btn-outline-secondary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>