<% if @cart.empty? %>
  <p class="text-muted">Tu carrito estÃ¡ vacÃ­o.</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Producto</th>
        <th>Cantidad</th>
        <th class="text-end">Precio</th>
        <th class="text-end">Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.items.each do |product, quantity| %>
        <tr>
          <td><%= product.product_name %></td>
          <td data-controller="cart-item"
              data-cart-item-product-id-value="<%= product.id %>"
              data-cart-item-price-value="<%= product.selling_price %>">
            <div class="input-group input-group-sm">
              <button class="btn btn-outline-secondary" type="button" data-action="click->cart-item#decrease">-</button>
              <input type="number"
                     value="<%= quantity %>"
                     min="1"
                     class="form-control text-center"
                     data-cart-item-target="quantity"
                     data-action="change->cart-item#quantityChanged input->cart-item#quantityChanged">
              <button class="btn btn-outline-secondary" type="button" data-action="click->cart-item#increase">+</button>
            </div>
          </td>
          <td class="text-end"><%= number_to_currency(product.selling_price) %></td>
          <td class="text-end"
              data-cart-item-target="lineTotal"
              data-amount="<%= product.selling_price * quantity %>">
            <%= number_to_currency(product.selling_price * quantity) %>
          </td>
          <td>
            <%= button_to "Eliminar", cart_item_path(product), method: :delete, params: { product_id: product.id }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3" class="text-end"><strong>Total:</strong></td>
        <td class="text-end" data-cart-total><%= number_to_currency(@cart.total) %></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
<% end %>