<h1 class="mb-3">ðŸ›’ Tu Carrito</h1>

<% if @cart.empty? %>
  <div class="card p-4 text-center bg-light-subtle">
    <p class="text-muted mb-3">Tu carrito estÃ¡ vacÃ­o.</p>
    <%= link_to 'Explorar productos', catalog_path, class: 'btn btn-outline-primary' %>
  </div>
<% else %>
  <% items = @cart.items %>
  <div class="row g-4">
    <div class="col-lg-8">
      <div class="table-responsive">
        <table class="table align-middle" aria-describedby="cart-summary-heading">
          <caption class="visually-hidden">Listado de productos en el carrito</caption>
          <thead>
            <tr>
              <th scope="col">Producto</th>
              <th scope="col" class="text-center">Cantidad</th>
              <th scope="col" class="text-end">Precio</th>
              <th scope="col" class="text-end">Total</th>
              <th scope="col" class="text-end"></th>
            </tr>
          </thead>
          <tbody id="cart-items">
            <% items.each do |product, quantity| %>
              <%= render 'carts/cart_item', product: product, quantity: quantity, cart: @cart %>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="3" class="text-end"><strong>Total:</strong></td>
              <td id="cart-total" class="text-end" aria-live="polite"><%= number_to_currency(@cart.total) %></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card shadow-sm sticky-top" style="top:90px;">
        <div class="card-body">
          <h5 id="cart-summary-heading" class="card-title mb-3">Resumen</h5>
          <ul class="list-unstyled small mb-3">
            <li class="d-flex justify-content-between"><span>Productos (<span id="cart-item-count" aria-live="polite"><%= @cart.item_count %></span>)</span><strong id="summary-subtotal"><%= number_to_currency(@cart.subtotal) %></strong></li>
            <% if @cart.tax_enabled? %>
              <li class="d-flex justify-content-between" id="summary-tax-row"><span>Impuestos (<%= @cart.tax_rate_percent %>%)</span><span id="summary-tax"><%= number_to_currency(@cart.tax_amount) %></span></li>
            <% end %>
            <li class="d-flex justify-content-between"><span>EnvÃ­o <%= @cart.shipping_cost.zero? ? '(Gratis)' : '' %></span><span id="summary-shipping"><%= number_to_currency(@cart.shipping_cost) %></span></li>
            <li class="d-flex justify-content-between border-top pt-2 fw-semibold"><span>Total a pagar</span><strong id="summary-grand-total" aria-live="polite"><%= number_to_currency(@cart.grand_total) %></strong></li>
          </ul>
          <div class="d-grid gap-2">
            <%= link_to 'Finalizar compra', checkout_step1_path, class: 'btn btn-primary btn-lg' %>
            <%= link_to 'Seguir comprando', catalog_path, class: 'btn btn-outline-secondary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>