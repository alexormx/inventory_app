<% content_for :title, catalog_meta_title %>
<% content_for :meta_description, catalog_meta_description %>
<% content_for :canonical_url, canonical_url %>

<%# JSON-LD Structured Data %>
<% content_for :head do %>
  <%= breadcrumb_json_ld(catalog_breadcrumbs) %>
  <%= product_list_json_ld(@products.first(10)) if @products.present? %>
<% end %>

<%# La lógica de filtros ahora está centralizada en FilterParamsHelper#filter_state %>

<div class="container mt-4" id="catalog" data-controller="catalog-view">
  <%# Breadcrumbs %>
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb mb-0">
      <% catalog_breadcrumbs.each_with_index do |crumb, index| %>
        <li class="breadcrumb-item <%= 'active' if crumb[:url].nil? %>" <%= 'aria-current="page"'.html_safe if crumb[:url].nil? %>>
          <% if crumb[:url] %>
            <%= link_to crumb[:name], crumb[:url], class: "text-decoration-none" %>
          <% else %>
            <%= crumb[:name] %>
          <% end %>
        </li>
      <% end %>
    </ol>
  </nav>

  <div class="catalog-header d-flex flex-column flex-lg-row align-items-lg-end justify-content-between gap-2 gap-lg-3 mb-3">
    <div class="catalog-title-wrapper">
      <h1 class="catalog-title fw-semibold mb-1"><%= catalog_dynamic_title %></h1>
      <p class="text-muted small mb-0"><%= catalog_subtitle %></p>
    </div>
    <%# Contador prominente y toggle de vista %>
    <div class="d-flex align-items-center gap-3">
      <div class="results-count d-none d-md-flex align-items-center bg-light rounded-pill px-3 py-2">
        <i class="fas fa-box text-danger me-2"></i>
        <span class="fw-semibold text-dark"><%= number_with_delimiter(@products.total_count) %></span>
        <span class="text-muted ms-1">productos</span>
      </div>
      <div class="btn-group view-toggle" role="group" aria-label="Cambiar vista">
        <button type="button" class="btn btn-outline-secondary btn-sm active" data-action="click->catalog-view#setGrid" data-catalog-view-target="gridBtn" title="Vista cuadrícula">
          <i class="fas fa-th"></i>
        </button>
        <button type="button" class="btn btn-outline-secondary btn-sm" data-action="click->catalog-view#setList" data-catalog-view-target="listBtn" title="Vista lista">
          <i class="fas fa-list"></i>
        </button>
      </div>
    </div>
    <%= form_with url: catalog_path, method: :get, data: {
      turbo_frame: "products_grid",
      controller: "catalog-filters",
      action: "change->catalog-filters#submit"
    }, class: "catalog-filters d-flex flex-column flex-sm-row flex-wrap gap-2 align-items-stretch w-100 w-lg-auto mb-0", id: "header-sort-form" do %>
      <% if @q.present? %>
        <input type="hidden" name="q" value="<%= @q %>">
        <div class="search-chip d-inline-flex align-items-center">
          <span class="chip-text" title="Criterio de búsqueda"><%= @q %></span>
          <%= link_to catalog_path(request.query_parameters.except('q', 'page')),
                      class: "chip-clear",
                      "aria-label": "Limpiar búsqueda",
                      data: { turbo_frame: "products_grid" } do %>&times;<% end %>
        </div>
      <% end %>
      <select name="sort" class="form-select form-select-sm sort-select" aria-label="Ordenar productos">
        <option value="newest" <%= 'selected' if @sort=='newest' %>>Más recientes</option>
        <option value="price_asc" <%= 'selected' if @sort=='price_asc' %>>Precio ↑</option>
        <option value="price_desc" <%= 'selected' if @sort=='price_desc' %>>Precio ↓</option>
        <option value="name_asc" <%= 'selected' if @sort=='name_asc' %>>Nombre A-Z</option>
      </select>
      <% if @q.present? || params[:sort].present? %>
        <%= link_to catalog_path,
                    class: "btn btn-outline-secondary btn-icon",
                    title: "Limpiar filtros",
                    data: { turbo_frame: "products_grid" } do %>
          <i class="fas fa-times"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <% if @q.present? %>
    <p class="text-muted small mb-3">Resultados para "<strong><%= @q %></strong>": <%= @products.total_count %></p>
  <% end %>

  <!-- ✅ Chips de filtros activos (usando partial reutilizable) -->
  <%= render 'filter_chips' %>

  <div class="row g-3">
    <!-- Sidebar filtros desktop -->
    <aside class="d-none d-md-block col-md-3 col-lg-2" id="desktopFilters">
      <%= render 'filters_form', form_id: 'desktop-filters-form', suffix: '' %>
    </aside>

    <!-- Products Grid with Turbo Frame -->
    <div class="col-12 col-md-9 col-lg-10 catalog-main">
      <%= render 'product_grid' %>
    </div>
  </div>

  <!-- ✅ Botón flotante para abrir filtros en mobile (fuera del grid) -->
  <button class="btn btn-danger d-md-none filter-toggle-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#filtersOffcanvas" aria-controls="filtersOffcanvas">
    <i class="fas fa-filter me-2"></i>Filtros
    <% if active_filters_count > 0 %>
      <span class="badge bg-white text-danger ms-2"><%= active_filters_count %></span>
    <% end %>
  </button>

  <!-- ✅ Offcanvas mobile -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="filtersOffcanvas" aria-labelledby="filtersOffcanvasLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="filtersOffcanvasLabel">
        <i class="fas fa-filter me-2"></i>Filtros
      </h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
    </div>
    <div class="offcanvas-body">
      <%= render 'filters_form', form_id: 'mobile-filters-form', suffix: 'Mobile' %>
    </div>
  </div>
</div>




