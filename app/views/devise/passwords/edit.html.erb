<main class="form-signin w-100 m-auto">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h1 class="h3 mb-3 fw-normal"><%=  t('.change_your_password') %></h1>

    <%= f.hidden_field :reset_password_token %>

    <div class="form-floating">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control top-input pwd-input" %>
      <%= f.label :password, t('.new_password') %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bottom-input pwd-conf-input" %>
      <%= f.label :password_confirmation, t('.confirm_new_password') %>
    </div>

    <div class="actions">
      <%= f.submit t('.change_my_password'), class: "btn btn-pwd btn-primary w-100 py-2 disabled" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <%= render "devise/shared/password_requirements" %>
</main>
