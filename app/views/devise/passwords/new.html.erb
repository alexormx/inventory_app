<main class="form-signin w-100 m-auto">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h1 class="h3 mb-3 fw-normal"><%= t('.forgot_your_password') %></h1>
    <%= render "devise/shared/error_messages", resource: resource %>
    

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control email-input" %>
      <%= f.label :email %>
    </div>

    <div class="actions">
      <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary w-100 py-2"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
