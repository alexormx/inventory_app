<nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-light shadow-sm site-navbar" data-nav>
  <div class="container">

    <!-- LOGO -->
    <%= link_to root_path, id: "logo", class: "navbar-brand d-flex align-items-center brand-link" do %>
      <%= picture_asset_tag "logo.png", alt: "Pasatiempos Logo",
            class: "brand-image img-fluid me-2",
            width: 40,
            height: 40,
            loading: 'eager' %>
      <span class="brand-text fw-bold">PASATIEMPOS</span>
    <% end %>

    <!-- HAMBURGER BUTTON -->
    <button class="navbar-toggler" id="hamburger" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-scroll" aria-controls="navbar-scroll" aria-expanded="false" aria-label="Toggle navigation" data-collapse-skip="true">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- COLLAPSIBLE CONTENT -->
    <div class="collapse navbar-collapse" id="navbar-scroll">
      <!-- TOP SEARCH (mobile only) -->
      <% if user_signed_in? %>
        <div class="navbar-top-search d-lg-none w-100 my-2">
          <form class="navbar-search" role="search" action="<%= catalog_path %>" method="get">
            <i class="fas fa-search search-icon" aria-hidden="true"></i>
            <input type="search" class="search-input" name="q" value="<%= params[:q] %>" placeholder="Buscar..." aria-label="Buscar productos" />
            <% if params[:q].present? %>
              <button type="button" class="btn-clear" aria-label="Limpiar búsqueda" onclick="this.closest('form').querySelector('.search-input').value=''; this.closest('form').submit();">&times;</button>
            <% end %>
          </form>
        </div>
      <% end %>

      <!-- PERSISTENT COMPACT SEARCH -->
      <% if user_signed_in? %>
        <div class="navbar-search-wrapper ms-lg-4 my-2 my-lg-0 flex-grow-1 d-none d-lg-flex align-items-center">
          <form class="navbar-search" role="search" action="<%= catalog_path %>" method="get">
            <i class="fas fa-search search-icon" aria-hidden="true"></i>
            <input type="search" class="search-input" name="q" value="<%= params[:q] %>" placeholder="Buscar..." aria-label="Buscar productos" />
            <% if params[:q].present? %>
              <button type="button" class="btn-clear" aria-label="Limpiar búsqueda" onclick="this.closest('form').querySelector('.search-input').value=''; this.closest('form').submit();">&times;</button>
            <% end %>
          </form>
        </div>
      <% end %>

      <!-- NAV MENU -->
      <ul id="navbar-menu" class="navbar-nav ms-auto d-flex align-items-center gap-2">

        <% if language_switcher_enabled? %>
        <!-- Language Switcher -->
        <li class="nav-item dropdown" data-controller="dropdown">
          <button type="button" class="btn btn-outline-secondary dropdown-toggle" id="lang-switcher" data-dropdown-target="button" data-action="click->dropdown#toggle" aria-expanded="false" aria-haspopup="true">
            <i class="fas fa-globe"></i> <%= I18n.locale.to_s.upcase %>
          </button>
          <ul id="lang-menu" class="dropdown-menu dropdown-menu-end" aria-labelledby="lang-switcher" data-dropdown-target="menu">
            <% languages = {
              'es-MX' => { label: 'Español', flag: 'flags/mx.svg' },
              'en'    => { label: 'English', flag: 'flags/us.svg' }
            } %>
            <% current_params = request.query_parameters.dup %>
            <% languages.each do |code, meta| %>
              <% merged_query = current_params.merge(locale: code).to_query %>
              <% target_href = "#{request.path}?#{merged_query}" %>
              <li>
                <%= link_to target_href, class: "dropdown-item d-flex align-items-center gap-2 #{'active fw-bold' if I18n.locale.to_s == code}", data: { turbo: false } do %>
                  <%= image_tag meta[:flag], alt: meta[:label], width: 20, height: 14, class: 'border' %>
                  <span><%= meta[:label] %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
        <% end %>

        <% if user_signed_in? %>


        <!-- Catálogo (solo usuarios autenticados) -->
        <li class="nav-item">
          <%= link_to catalog_path,
            class: "nav-item-link d-flex align-items-center #{'active' if controller_path=='products' && action_name=='index'}",
            'data-nav-link': 'catalog',
            'aria-current': (controller_path=='products' && action_name=='index') ? 'page' : nil,
            'aria-label': 'Ver catálogo de productos' do %>
              <i class="fas fa-store" aria-hidden="true"></i> <span class="link-text">Catálogo</span>
          <% end %>
        </li>

        <% if dark_mode_enabled? %>
        <li class="nav-item">
          <button type="button" class="nav-item-link d-flex align-items-center" id="theme-toggle" aria-label="Cambiar tema" data-theme-toggle>
            <i class="fas fa-moon" aria-hidden="true"></i> <span class="link-text">Tema</span>
          </button>
        </li>
        <% end %>
        <% end %>

        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to admin_dashboard_path, class: "nav-item-link d-flex align-items-center #{'active' if controller_path.start_with?('admin')}", 'aria-label': 'Panel de administración' do %>
                <i class="fas fa-cogs" aria-hidden="true"></i> <span class="link-text">Admin</span>
              <% end %>
            </li>
          <% end %>

          <!-- Account Dropdown -->
          <li class="nav-item dropdown" data-controller="dropdown">
            <button type="button" id="account" class="nav-item-link dropdown-toggle d-flex align-items-center" data-dropdown-target="button" data-action="click->dropdown#toggle" aria-expanded="false" aria-haspopup="true" aria-label="Menú de cuenta de usuario">
              <span class="user-avatar" aria-hidden="true"><%= user_initials(current_user) %></span> <span class="link-text">Mi cuenta</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" id="account-menu" aria-labelledby="account" data-dropdown-target="menu">
              <li><%= link_to "Mi Perfil", profile_path, class: "dropdown-item" %></li>
              <li><%= link_to "Mis Pedidos", orders_path, class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to "Cerrar sesión", destroy_user_session_path,
                              method: :delete,
                              id: "logout-button",
                              class: "dropdown-item",
                              form: { data: { turbo: false } } %>
              </li>
            </ul>
          </li>

          <!-- Cart Button -->
          <li class="nav-item">
      <% cart_count = session[:cart]&.values&.sum || 0 %>
          <%= link_to cart_path,
        class: "nav-item-link position-relative d-flex align-items-center #{'active' if ['cart_items','carts'].include?(controller_path)}",
                'data-nav-link': 'cart',
                'aria-current': (['cart_items','carts'].include?(controller_path)) ? 'page' : nil,
                'aria-label': "Ver carrito de compras (#{cart_count} artículos)" do %>
              <i class="fas fa-shopping-cart" aria-hidden="true"></i> <span class="link-text">Carrito</span>
                <span id="cart-count" class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle" aria-live="polite" aria-atomic="true">
                <%= cart_count %>
              </span>
            <% end %>
            <% unless controller_path == 'carts' && action_name == 'show' %>
              <%= render 'customers/partials/cart_preview' %>
            <% end %>
          </li>

        <% else %>
          <!-- Login -->
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-item-link d-flex align-items-center #{'active' if controller_path=='sessions'}", 'aria-label': 'Iniciar sesión' do %>
              <i class="fas fa-sign-in-alt" aria-hidden="true"></i> <span class="link-text">Iniciar sesión</span>
            <% end %>
          </li>

          <!-- Register -->
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-item-link d-flex align-items-center #{'active' if controller_path=='registrations'}", 'aria-label': 'Crear nueva cuenta' do %>
              <i class="fas fa-user-plus" aria-hidden="true"></i> <span class="link-text">Registrarse</span>
            <% end %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</nav>




<script>
// Activación dinámica de enlaces del navbar cuando el header es permanente
(function(){
  if(window.__navActivateInit) return; window.__navActivateInit = true;
  function updateNavActive(){
    var path = window.location.pathname;
    document.querySelectorAll('#main-navbar .nav-item-link').forEach(function(el){ el.classList.remove('active'); el.removeAttribute('aria-current'); });
    function activate(sel){ document.querySelectorAll(sel).forEach(function(el){ el.classList.add('active'); el.setAttribute('aria-current','page'); }); }
    if(path.startsWith('/cart')) activate('#main-navbar a[data-nav-link="cart"]');
    else if(path.startsWith('/catalog')) activate('#main-navbar a[data-nav-link="catalog"]');
  }
  document.addEventListener('turbo:load', updateNavActive);
  document.addEventListener('turbo:render', updateNavActive);
  updateNavActive();
})();
</script>


